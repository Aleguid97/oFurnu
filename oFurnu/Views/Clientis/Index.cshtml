@model IEnumerable<oFurnu.Models.Clienti>

@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <h2 class="mb-3">Lista Clienti</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-dark" })
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cognome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Indirizzo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Citta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CAP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ruolo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cognome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Indirizzo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Citta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CAP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ruolo)
                    </td>
                    <td>
                        <div class="btn-group-sm" role="group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID_Cliente }, new { @class = "btn btn-outline-dark" })
                            @Html.ActionLink("Details", "Details", new { id = item.ID_Cliente }, new { @class = "btn btn-outline-secondary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID_Cliente }, new { @class = "btn btn-outline-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
